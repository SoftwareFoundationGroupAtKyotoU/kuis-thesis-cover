  \hsize=\avwidth \parindent=0pt \tabskip=0pt
  \vbox to 21cm{%
   \vskip1cm
   \CL{\Large\bf \MKT@THESIS}%
   \vskip2cm
   \CL{\LARGE\bf
    \vbox{\halign{\hfil ##\hfil\cr%
     \@TITLE\crcr
    }}%
   }%
