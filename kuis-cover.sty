\def\MAKETITLE{{%
 \def\CL##1{\centerline{##1\strut}}%
 \def\\{\cr}%
 \fboxsep=0pt\relax
 \def\avheight{21cm}%
 \def\avwidth{14.85cm}%
 \fbox{%
  \hsize=\avwidth \parindent=0pt \tabskip=0pt
  \vbox to 21cm{%
   \vskip1cm
   \CL{\Large\bf \MKT@THESIS}%
   \vskip2cm
   \CL{\LARGE\bf
    \vbox{\halign{\hfil ##\hfil\cr%
     \@TITLE\crcr
    }}%
   }%
   \vskip1cm
   \CL{\large \MKT@SUPERVISOR\quad \@SUPERVISOR}%
   \vfill\vfill\vfill
   \CL{\large
    \vbox{\halign{\hfil ##\hfil\cr%
     \MKT@DEPARTMENT\crcr}}}%
   \vskip.5cm
   \CL{\large
    \vbox{\halign{\hfil ##\hfil\cr%
     \ifDS@en
     \monthname[\@ENTRANCEMONTH] {\@ENTRANCEYEAR} of Entry\cr
     \monthname[\@COMPLETIONMONTH] {\@COMPLETIONYEAR} of Completion\cr%
     \else
     平成{\@ENTRANCEYEAR}年{\@ENTRANCEMONTH}月入学\cr
     平成{\@COMPLETIONYEAR}年{\@COMPLETIONMONTH}月\MKT@GRADUATE\cr%
     \fi}}}%
   \vskip2cm
   \CL{\Large \@AUTHOR}%
   \vskip2cm
  }%
}}}

